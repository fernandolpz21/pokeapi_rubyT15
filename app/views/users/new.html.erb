<style>
  .bg-gradient {
    max-width: 700px;
    margin: 0 auto;
    padding: 20px;
    background: linear-gradient(to right, #ff6b6b, #c56cf0);
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    margin-top: 50px;
  }

  .bg-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    margin-top: 50px;
  }

  body {
    background-image: url("https://cdn.wallpapersafari.com/14/68/1O3XBd.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    font-family: Georgia;
  }

  .text-gradient-pink-purple {
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-image: linear-gradient(to right, #ff6b6b, #c56cf0);
  }

  .input-field {
    border-radius: 5px;
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
    opacity: 0.7;
    padding: 6px;
    margin-bottom: 12px;
  }

  .button {
    display: inline-block;
    background-color: #ff6b6b;
    color: #fff;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    margin-left: 0.375rem;
  }

  .button:hover {
    background-color: #c56cf0;
  }
</style>

<div class="bg-gradient min-h-screen flex flex-col justify-center items-center">
  <div class="absolute top-0 left-0 w-full h-full"></div>
  <div class="bg-container min-h-screen flex flex-col justify-center items-center">
    <div class="w-96 bg-white bg-opacity-70 rounded px-8 py-10">
      <%= form_with model: @user, url: signup_path do |form| %>
        <%= render partial: "shared/form_errors", locals: { object: form.object } %>
        <div class="mb-4">
          <%= form.label :email, class: "text-gradient-pink-purple text-white" %>
          <%= form.email_field :email, required: true, class: "input-field bg-white rounded px-3 py-2" %>
        </div>
        <div class="mb-4">
          <%= form.label :password, class: "text-gradient-pink-purple text-white" %>
          <%= form.password_field :password, required: true, class: "input-field bg-white rounded px-3 py-2" %>
        </div>
        <div class="mb-4">
          <%= form.label :password_confirmation, class: "text-gradient-pink-purple text-white" %>
          <%= form.password_field :password_confirmation, required: true, class: "input-field bg-white rounded px-3 py-2" %>
        </div>
        <div class="flex justify-between items-center">
          <%= form.submit "Sign Up", class: "button" %>
          <div class="text-white">
            <%= link_to "Log in", login_path, class: "button" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
