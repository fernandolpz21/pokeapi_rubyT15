<body>
   <main class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" style="text-align: center;">
      <h1 class=" max-w-2xl min-width mt-10 mb-8 text-3xl leading-8 font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl"><span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Pokedex</span></h1>
      <ul class="card-container">
         <% @pokemons.each do |pokemon| %>
         <li>
            <div class="card">
               <div class="img-container">
                  <%= image_tag pokemon.sprite %>
               </div>
               <div class="content">
                  <h3><%= pokemon.name %></h3>
                  <button><%= link_to "Details", pokemon_path(id: pokemon.id), class: "text-white" %></button>
               </div>
            </div>
         </li>
         <% end %>
      </ul>
   </main>
   <style>
      .card-container {
      margin-top: 40px;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 20px;
      }
      .card {
      position: relative;
      width: 400px;
      height: 550px;
      border-radius: 20px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      overflow: hidden;
      background-image: linear-gradient(to top right, #ff6b98, #99405B);
      }
      .card:hover {
      box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
      transform: translateY(-10px);
      }
      .card .img-container {
      position: relative;
      width: 100%;
      height: 60%;
      overflow: hidden;
      }
      .card .img-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      }
      .card .content {
      position: relative;
      height: 40%;
      padding: 20px;
      background-color: #fff;
      text-align: center;
      }
      .card .content h3 {
      font-family: Georgia;
      margin: 10px;
      font-size: 24px;
      font-weight: bold;
      background-image: linear-gradient(to right, #00c6ff, #003B4C);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      }
      .card .content button {
      font-family: Georgia;
      display: inline-block;
      padding: 10px 20px;
      border: none;
      border-radius: 30px;
      background-image: linear-gradient(to right, #f3c300, #f79d00);
      color: #fff;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s;
      }
      .card .content button:hover {
      background-image: linear-gradient(to right, #ffc107, #ff8c00);
      }
   </style>
</body>
