<body>
   <main class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="card-container">
         <div class="card">
            <div class="img-container">
               <%= image_tag @pokemon.sprite %>
            </div>
            <div class="px-6 py-4 text-center">
               <h1 class="text-xl font-bold mb-2"><%= @pokemon.name %></h1>
               <p>
                  Height: <%= @pokemon.height %> | Weight: <%= @pokemon.weight %>
               </p>
               <p>
                  Types: <%= @pokemon.types %>
               </p>
               <p>
                  Abilities: <%= @pokemon.abilities %>
               </p>
               <%= link_to "Back to Pokedex", pokemons_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
            </div>
         </div>
      </div>
   </main>
   <style>
      .card-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      }
      .card {
      max-width: 10000px;
      max-height: 10000px;
      width: 100%;
      background-image: linear-gradient(to right, #10b981,#064e3b);
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }
      .card h1 {
      font-family: Georgia;
      font-size: 32px;
      line-height: 1.2;
      margin-bottom: 10px;
      font-weight: bold;
      background-image: linear-gradient(to top, #00c6ff, #f0fdfa);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      }
      .card p + p {
      margin-top: 10px;
      }
      .card .img-container {
      position: relative;
      display: flex;
      justify-content: center;
      width: 100%;
      height: 60%;
      overflow: hidden;
      align-items: center;
      }
      .card .img-container img {
      min-width: 25%;
      min-height: 25%;
      object-fit: cover;
      object-position: center;
      }
      .card p {
      font-size: 16px;
      line-height: 1.5;
      margin-bottom: 10px;
      color: #f3f6f4;
      font-style: italic;
      font-family: Georgia;
      }
      .card a {
      display: block;
      font-family: Georgia;
      margin-top: 20px;
      background-image: linear-gradient(to right, #00c6ff, #003B4C);
      color: #fff;
      font-weight: bold;
      text-decoration: none;
      padding: 20px 10px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      }
      .card .px-6 {
      text-align: center;
      }
   </style>
</body>
